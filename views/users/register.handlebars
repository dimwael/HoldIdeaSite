<div class="row">
  <div class ="col-md-6 mx-auto">
    <div class ="card card-body">
      <img  src="/img/logo.png" width="300" height="300" class="center" >
      <h3 class ="text-center"> Account Register </h3>
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name ="email" class ="form-control" required>
        </div>
        <div class="form-group">
          <label for="Name">Name</label>
          <input type="text" name ="name" class ="form-control" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="password2">Password</label>
          <input type="password" name ="password" class ="form-control" value="{{password}}" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="password">Confirm Password</label>
          <input type="password" name="password2" value="{{password2}}" class ="form-control" required>
        </div>
        <button type="submit" class ="btn btn-primary">submit</button>
      </form>
    </div>
  </div>
</div>
